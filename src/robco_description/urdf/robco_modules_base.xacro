<?xml version="1.0"?>
<robot xmlns="http://www.ros.org" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="description_package" value="$(find robco_description)" />

    <xacro:macro name="robco_base_module"
        params="name mesh_filename tf_rpy tf_xyz proximal_mass proximal_ixx proximal_ixy proximal_ixz proximal_iyy proximal_iyz proximal_izz proximal_com_xyz next">
        <link name="${name}">
            <visual>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${proximal_mass}" />
                <inertia ixx="${proximal_ixx}" ixy="${proximal_ixy}" ixz="${proximal_ixz}"
                    iyy="${proximal_iyy}" iyz="${proximal_iyz}"
                    izz="${proximal_izz}" />
                <origin rpy="0 0 0" xyz="${proximal_com_xyz}" />
            </inertial>
        </link>

        <xacro:if value="${next != ''}">
            <joint name="${name}__${next}" type="fixed">
                <origin rpy="${tf_rpy}" xyz="${tf_xyz}" />
                <parent link="${name}" />
                <child link="${next}" />
            </joint>
        </xacro:if>
    </xacro:macro>

    <xacro:macro name="robco_link_module"
        params="name mesh_filename tf_rpy tf_xyz proximal_mass proximal_ixx proximal_ixy proximal_ixz proximal_iyy proximal_iyz proximal_izz proximal_com_xyz next">
        <link name="${name}">
            <visual>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${proximal_mass}" />
                <inertia ixx="${proximal_ixx}" ixy="${proximal_ixy}" ixz="${proximal_ixz}"
                    iyy="${proximal_iyy}" iyz="${proximal_iyz}"
                    izz="${proximal_izz}" />
                <origin rpy="0 0 0" xyz="${proximal_com_xyz}" />
            </inertial>
        </link>

        <xacro:if value="${next != ''}">
            <joint name="${name}__${next}" type="fixed">
                <origin rpy="${tf_rpy}" xyz="${tf_xyz}" />
                <parent link="${name}" />
                <child link="${next}" />
            </joint>
        </xacro:if>
    </xacro:macro>

    <xacro:macro name="robco_drive_module"
        params="name proximal_mesh_filename distal_mesh_filename proximal_tf_rpy proximal_tf_xyz distal_tf_rpy distal_tf_xyz lim_lower:=-4.7124 lim_upper:=4.7124 proximal_mass proximal_ixx proximal_ixy proximal_ixz proximal_iyy proximal_iyz proximal_izz proximal_com_xyz distal_mass distal_ixx distal_ixy distal_ixz distal_iyy distal_iyz distal_izz distal_com_xyz next">
        <!-- proximal link, calle ${name} to keep compatibility with next=... parameter -->
        <link name="${name}">
            <visual>
                <geometry>
                    <mesh
                        filename="file://${description_package}/meshes/${proximal_mesh_filename}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh
                        filename="file://${description_package}/meshes/${proximal_mesh_filename}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${proximal_mass}" />
                <inertia ixx="${proximal_ixx}" ixy="${proximal_ixy}" ixz="${proximal_ixz}"
                    iyy="${proximal_iyy}" iyz="${proximal_iyz}"
                    izz="${proximal_izz}" />
                <origin rpy="0 0 0" xyz="${proximal_com_xyz}" />
            </inertial>
        </link>

        <joint name="${name}__${name}_shaft" type="fixed">
            <origin rpy="${proximal_tf_rpy}" xyz="${proximal_tf_xyz}" />
            <parent link="${name}" />
            <child link="${name}_shaft" />
        </joint>

        <link name="${name}_shaft">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.001"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
            </inertial>
        </link>

        <joint name="${name}_joint" type="revolute">
            <origin rpy="${distal_tf_rpy}" xyz="${distal_tf_xyz}" />
            <axis xyz="0 0 1" />
            <limit lower="${lim_lower}" upper="${lim_upper}" effort="0" velocity="4.25" />
            <parent link="${name}_shaft" />
            <child link="${name}_distal" />
        </joint>

        <link name="${name}_distal">
            <visual>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${distal_mesh_filename}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${distal_mesh_filename}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${distal_mass}" />
                <inertia ixx="${distal_ixx}" ixy="${distal_ixy}" ixz="${distal_ixz}"
                    iyy="${distal_iyy}" iyz="${distal_iyz}"
                    izz="${distal_izz}" />
                <origin rpy="0 0 0" xyz="${distal_com_xyz}" />
            </inertial>
        </link>

        <xacro:if value="${next != ''}">
            <joint name="${name}_distal__${next}" type="fixed">
                <parent link="${name}_distal" />
                <child link="${next}" />
            </joint>
        </xacro:if>
    </xacro:macro>

    <xacro:macro name="robco_end_effector"
        params="name mesh_filename tf_rpy tf_xyz proximal_mass proximal_ixx proximal_ixy proximal_ixz proximal_iyy proximal_iyz proximal_izz proximal_com_xyz">
        <link name="${name}">
            <visual>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://${description_package}/meshes/${mesh_filename}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${proximal_mass}" />
                <inertia ixx="${proximal_ixx}" ixy="${proximal_ixy}" ixz="${proximal_ixz}"
                    iyy="${proximal_iyy}" iyz="${proximal_iyz}"
                    izz="${proximal_izz}" />
                <origin rpy="0 0 0" xyz="${proximal_com_xyz}" />
            </inertial>
        </link>
    </xacro:macro>

</robot>